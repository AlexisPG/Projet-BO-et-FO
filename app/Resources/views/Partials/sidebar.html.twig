<aside class="main-sidebar">
  {# Mettre en actif un lien de naviation #}
  {#{{ dump(app.request.get('_route')) }} #}{# Permet de récupérer le nom de la route sur laquelle on se trouve#}

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="{{ asset("dist/img/user2-160x160.jpg") }}" class="img-circle" alt="User Image">
      </div>
      <div class="pull-left info">
        <p>Alexander Pierce</p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>
    <!-- search form -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                </button>
              </span>
      </div>
    </form>
    <!-- /.search form -->
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="header">MAIN NAVIGATION</li>
      <li class="active treeview">
        <a href="#">
          <i class="fa fa-dashboard"></i> <span>Liens</span>
          <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu active">
          <li class="{%  if app.request.get('_route') == 'admin_default_index' %} active {% endif %}"><a href="{{ path("public_homepage") }}"><i class="fa fa-circle-o"></i>
              Page d'accueil PUBLIC</a></li>
          <li class="{%  if app.request.get('_route') == 'products' %} active {% endif %}"><a href="{{ path("products") }}"><i class="fa fa-circle-o"></i>
              Produits</a></li>
          <li class="{%  if app.request.get('_route') == 'products_create' %} active {% endif %}"><a href="{{ path("products_create") }}"><i class="fa fa-circle-o"></i>
              Création de produit</a></li>
          <li class="{%  if app.request.get('_route') == 'categories' %} active {% endif %}"><a href="{{ path("categories") }}"><i class="fa fa-circle-o"></i>Categories</a></li>
          <li class="{%  if app.request.get('_route') == 'categories_create' %} active {% endif %}"><a href="{{ path("categories_create") }}"><i class="fa fa-circle-o"></i>Création de catégories</a></li>
          <li class="{%  if app.request.get('_route') == 'feedback' %} active {% endif %}"><a href="{{ path("feedback") }}"><i class="fa fa-circle-o"></i>Feedback</a></li>
          <li class="{%  if app.request.get('_route') == 'contact' %} active {% endif %}"><a href="{{ path("contact") }}"><i class="fa fa-circle-o"></i>Contact</a></li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-files-o"></i>
          <span>Listes des catégories</span>
          <span class="pull-right-container">
              <span class="label label-primary pull-right">
                {{ render(controller("AdminBundle:Category:renderCountCategories")) }}
              </span>
            </span>
        </a>
        <ul class="treeview-menu">
          {{ ma_fonction()|raw }}
          {#{{ render(controller("AdminBundle:Category:renderCategories")) }}#}
        </ul>
      </li>
      <li>
        <a href="pages/widgets.html">
          <i class="fa fa-th"></i> <span>Widgets</span>
          <span class="pull-right-container">
              <small class="label pull-right bg-green">new</small>
            </span>
        </a>
      </li>
      <li><a href="#"><i class="fa fa-circle-o text-red"></i> <span>Important</span></a></li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>