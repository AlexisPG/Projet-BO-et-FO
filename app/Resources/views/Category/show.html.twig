{% extends "layout.html.twig" %}

{% block titleContent %}
    <h1>Page catégorie de : {{ category.title }} </h1>

{% endblock %}

{%  block content %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Description de la catégorie : {{ category.title }} </h3>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Intitulé</th>
                    <th>Descriptif</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>ID</td>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <td>Position</td>
                    <td>{{ category.position }}</td>
                </tr>
                <tr>
                    <td>Titre</td>
                    <td>{{ category.title|default('Catégorie sans nom') }}</td>
                </tr>

                <tr>
                    <td>Description</td>
                    <td>{{ category.description }}</td>
                </tr>
                </tbody>
                <tfoot>
                </tfoot>

            </table>

            <a href="{{ path("edit_category", { id:category.id }) }}" class="btn btn-primary">Modifier</a>
            <a href="{{ path("category_remove", { id:category.id }) }}" class="btn btn-danger">Supprimer</a>
        </div>
    </div>
{%  endblock %}