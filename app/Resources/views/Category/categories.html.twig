{% extends "layout.html.twig" %}

{% block titleContent %}
    <h1>Page catégories de produits </h1>

{% endblock %}

{%  block content %}

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">il y a <strong>{{ categories|length }}</strong> catégories</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Active</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.title|default('Produit sans nom') }}</td>
                        <td>{{ category.description|raw|nl2br|slice(0, 50) }} - {{ category.description|length }} caractères</td>
                        <td>{{ category.date_created|date("m/d/Y") }}</td>
                        <td>
                            {% if category.active == true %}
                                Active
                            {% else %}
                                Non active
                            {% endif %}
                        </td>
                        <td><a href="#" class="btn btn-success">Voir</a></td>
                        <td><a href="#" class="btn btn-primary">Modifier</a></td>
                        <td><a href="#" class="btn btn-danger">Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>ID</th>
                    <th>TITRE</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Active</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
{%  endblock %}