{% extends "public.layout.html.twig" %}

{% block stylesheets %}
    <!-- Custom CSS -->
    <link href="{{ asset('public/css/shop-item.css') }}" rel="stylesheet">
{%  endblock %}

{# app/Resources/views/security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}
{%  block body %}

    <div class="col-md-3">
        {% block nav %}
            <!-- SIDEBAR -->
            {% include 'Public/Partials-public/sidebar.html.twig' %}
        {% endblock nav %}
    </div>

    {# Affichage du message de success	#}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">{#Permet de mettre le message en vert, au niveau de la class#}
            {{ flash_message }}
        </div>
    {% endfor %}

    <h1>Cr√©ation de compte</h1>

    {{  form_start(form, {
        'attr' : {
            'novalidate' : 'novalidate'
        }
    }) }}

    <p>
        {{  form_label(form.username, 'Utilisateur :') }}
        {{  form_widget(form.username) }}
    </p>

    <p>
        {{  form_label(form.password, 'Mot de passe :') }}
        {{  form_widget(form.password) }}
    </p>

    <p>
        {{  form_label(form.email, 'Email:') }}
        {{  form_widget(form.email) }}
    </p>

    <p>
        {{  form_label(form.birthday, 'Date de naissance:') }}
        {{  form_widget(form.birthday) }}
    </p>

    <p>
        {{  form_label(form.avatar, 'Avatar :') }}
        {{  form_widget(form.avatar) }}
    </p>

    <p>
        <input type="submit" name="submit">
    </p>

    <p>
        {{  form_errors(form.username) }}
        {{  form_errors(form.password) }}
        {{  form_errors(form.email) }}
        {{  form_errors(form.birthday) }}
        {{  form_errors(form.avatar) }}
    </p>
    {{  form_end(form) }}

{% endblock body %}